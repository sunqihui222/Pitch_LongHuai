<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LaunchTheme">
        <!--<item name="android:windowBackground">@drawable/bg_splash1</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.TextAppearanceLogin">
        <!--<item name="android:textColor">@color/material_login_register_color</item>-->
        <!--<item name="colorControlNormal">@color/material_login_register_color</item>-->
        <!--<item name="android:textColorHint">@color/material_login_register_color</item>-->
        <!--<item name="colorControlActivated">@color/material_login_register_color</item>-->
        <!--<item name="colorControlHighlight">@color/material_login_register_color</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>

    <style name="AppTheme.Register" parent="AppTheme.Transparent">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--版本更新模块-->
    <style name="VersionTextTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lines">2</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Font12Orange" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>




    <!--选择查询对话框模块-->
    <style name="MaterialDialogTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="MaterialDialogTheme.TextAppearanceDialogError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialDialogTheme.TextAppearanceDialog">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="RecyclerViewItemTextTheme">
        <item name="android:padding">0.5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--详情页模块-->
    <style name="DetailTextTheme">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/material_orange_400</item>
    </style>

    <style name="Title3">
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">@color/blueText</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceLoginError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_login_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceLogin">
        <item name="android:textColor">@color/material_login_register_color</item>
        <item name="colorControlNormal">@color/material_login_register_color</item>
        <item name="android:textColorHint">@color/material_login_register_color</item>
        <item name="colorControlActivated">@color/material_login_register_color</item>
        <item name="colorControlHighlight">@color/material_login_register_color</item>
    </style>

    <style name="MaterialLoginTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>
</resources>
